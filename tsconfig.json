{
  "compilerOptions": {
    "target": "ES2020", // Target ECMAScript version
    "module": "CommonJS", // Use CommonJS module system, which is standard for Node.js
    "lib": ["ES2020"], // Include the standard library for ES2020
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Root directory for TypeScript files
    "moduleResolution": "Node", // Use Node.js module resolution
    "esModuleInterop": true, // Ensure compatibility with CommonJS and ES Modules
    "strict": true, // Enable strict type checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "types": ["node"] // Include Node.js type definitions
  },
  "include": ["src/**/*"], // Include all files in the "src" directory
  "exclude": ["node_modules", "dist"] // Exclude 'node_modules' and 'dist' directories
}
